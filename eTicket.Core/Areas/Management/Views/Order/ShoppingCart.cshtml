@model IEnumerable<ShoppingCartItem>

<h2>Your Shopping Cart</h2>

@if (!Model.Any())
{
    <p>Your shopping cart is empty.</p>
}
else
{
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="text-center">
                <h2>Your shopping cart summary</h2>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Movie Title</th>
                        <th>Selected Amount</th>
                        <th>Price</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@item.Movie.Title</td>
                            <td class="align-middle">@item.Amount</td>
                            <td class="align-middle">@item.Movie.Price.ToString("C")</td>
                            <td class="align-middle">@((item.Movie.Price * item.Amount).ToString("C"))</td>
                            <td class="align-middle">
                                <a class="text-danger" asp-action="RemoveFromCart" asp-route-movieId="@item.Movie.Id">
                                    <i class="bi bi-cart-dash"></i>
                                </a>
                                <a class="text-success" asp-action="AddToCart" asp-route-movieId="@item.Movie.Id">
                                    <i class="bi bi-cart-plus"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3"></td>
                        <td><strong>Total:</strong></td>
                        <td>@Model.Sum(item => item.Movie.Price * item.Amount).ToString("C")</td>
                    </tr>
                </tfoot>
            </table>

        </div>
    </div>
    <div>
        <a asp-action="Checkout">Proceed to Checkout</a>
    </div>
}