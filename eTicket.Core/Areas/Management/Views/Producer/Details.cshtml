@model eTicket.Models.ProducerDetailsVM
@{
    ViewData["Title"] = "Producer Details";
}


<div class="row text ">
    <div class="offset-2 col-md-8">
        <p>
            <h1>Details for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group text-center">
                    <img src="@Model.ProfilePhotoURL" class="border-info rounded-circle"  />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePhotoURL" class="form-label"></label>
                    <input asp-for="ProfilePhotoURL" class="form-control" readonly />
                    <span asp-validation-for="ProfilePhotoURL" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Update</a>
                    <a asp-action="Index" class="btn btn-outline-info">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h3>Movies produced by @Model.Name</h3>
    </div>
    <div class="card-body">
        @if (Model.Movies.Any())
        {
            foreach (var item in Model.Movies)
            {
                <h5 class="card-title">@item</h5>
            }
        }
        else
        {
            <h5 class="card-title">None at the moment</h5>
        }
    </div>
    <div class="card-footer">
        <a asp-action="ManageRoles" asp-route-id="@Model.Id"
           class="btn btn-primary" style="width:auto">
            Manage Roles
        </a>
    </div>
</div>