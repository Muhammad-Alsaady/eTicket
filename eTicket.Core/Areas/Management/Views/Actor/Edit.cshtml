@model Actor
@{
    ViewData["Title"] = "Update Actor";
}


<div class="row text ">
    <div class="offset-2 col-md-8">
        <p>
            <h1>Details for @Model.Name</h1>
        </p>
        <form asp-action="Edit" method="post">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-md-8 offset-2">

                    <div class="form-group text-center">
                        <img src="@Model.ProfilePhotoURL" class="border-info rounded-circle" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePhotoURL" class="form-label"></label>
                        <input asp-for="ProfilePhotoURL" class="form-control" />
                        <span asp-validation-for="ProfilePhotoURL" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 d-flex justify-content-between">
                        <input class="btn btn-primary float-right" type="submit" value="Update" />
                        <a asp-action="Index" class="btn btn-outline-info">Show All</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

