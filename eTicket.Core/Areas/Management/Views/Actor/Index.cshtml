@model IEnumerable<Actor>

@{
    ViewData["Title"] = "Index";
}

<h1>Actors</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfilePhotoURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="align-middle">
                <img src="@item.ProfilePhotoURL" alt="@item.Name" class="rounded-circle" />
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td class="align-middle">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" >
                    <i class="bi bi-pencil-square"></i>
                    Edit
                </a> 
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-eye"></i>
                        Detalis
                </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                    <i class="bi bi-trash"></i>
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>

@await Html.PartialAsync("_CreateButton", "Actor")